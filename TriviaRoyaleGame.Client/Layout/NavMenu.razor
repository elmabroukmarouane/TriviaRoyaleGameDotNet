<div class="flex flex-col h-full">

    <!-- Brand & Hamburger for small screens -->
    <div class="flex items-center justify-between px-6 py-4 border-b border-indigo-700 md:hidden">
        <div class="text-xl font-bold">TriviaRoyaleGame.Client</div>
        <button @onclick="ToggleNavMenu" aria-label="Toggle Menu"
                class="text-indigo-300 hover:text-white focus:outline-none focus:ring-2 focus:ring-white">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2"
                 stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                @if (collapseNavMenu)
                {
                    <path d="M4 6h16M4 12h16M4 18h16" />
                }
                else
                {
                    <path d="M6 18L18 6M6 6l12 12" />
                }
            </svg>
        </button>
    </div>

    <!-- Navigation links -->
    <nav class="@NavMenuCssClass md:block flex-1 overflow-auto px-2 py-4 space-y-2 bg-indigo-800 md:bg-indigo-900">

        <NavLink href="" Match="NavLinkMatch.All" class="block px-4 py-2 rounded hover:bg-indigo-700"
                 activeClass="bg-indigo-700 font-semibold">
            <span class="mr-2">🏠</span> Home
        </NavLink>

        @* <NavLink href="counter" class="block px-4 py-2 rounded hover:bg-indigo-700" activeClass="bg-indigo-700 font-semibold">
            <span class="mr-2">➕</span> Counter
        </NavLink>

        <NavLink href="weather" class="block px-4 py-2 rounded hover:bg-indigo-700" activeClass="bg-indigo-700 font-semibold">
            <span class="mr-2">☁️</span> Weather
        </NavLink> *@

        <NavLink href="quiz" class="block px-4 py-2 rounded hover:bg-indigo-700" activeClass="bg-indigo-700 font-semibold">
            <span class="mr-2">🧠</span> Trivia Quiz
        </NavLink>

        <NavLink href="score-board" class="block px-4 py-2 rounded hover:bg-indigo-700" activeClass="bg-indigo-700 font-semibold">
            <span class="mr-2">🧠</span> Score Board
        </NavLink>

        <AuthorizeView Roles="SuperAdmin">
            <Authorized>
                <NavLink href="client-log-app" class="block px-4 py-2 rounded hover:bg-indigo-700" activeClass="bg-indigo-700 font-semibold">
                    <span class="mr-2">🧠</span> Log App
                </NavLink>
            </Authorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "hidden" : "block";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
